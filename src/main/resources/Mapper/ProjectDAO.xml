<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="cn.ecnu.mosiv.dao.ProjectDAO">
    <insert id="newProject" parameterType="cn.ecnu.mosiv.Pojo.Project" useGeneratedKeys="true" keyColumn="id"
            keyProperty="id">
        insert into project values(
            #{project.id},
            #{project.name},
            #{project.authorName},
            #{project.description},
            #{project.userId})
    </insert>

    <select id="searchProjectByUserId" parameterType="int">
        select id from project
            where userId = #{userId}
    </select>

</mapper>

